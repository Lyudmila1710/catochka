<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:shadowColor="#000000"
            android:shadowDx="90"
            android:shadowDy="130"
            android:shadowRadius="20"
            android:text="Add New Card"
            app:cornerRadius="60dp" />
        <View
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@color/white" />

        <View
            android:id="@+id/osnova"
            android:layout_width="365dp"
            android:layout_height="178dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#6750A3" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="302dp"

            android:background="#EDEDED"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Your Name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="280dp"
            android:text="Name on card"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:text="Card Number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="382dp"
            android:background="#EDEDED"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Your Card Number" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="440dp"
            android:text="Exp Date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="440dp"
            android:text="CVV" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            android:text="Your Name"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="123dp"
            android:text="XXXX XXXX XXXX XXXX"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="123dp"
            android:text="XX/XX"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:text="A Debit Card"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="343dp"
            android:layout_marginTop="220dp"
            android:text="Visa"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:ignore="Visa,TextSizeCheck" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="190dp"
            android:text="Your Balance"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:ignore="Your Balance,TextSizeCheck" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="210dp"
            android:text="$0"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="Your Balance,TextSizeCheck" />

        <EditText
            android:id="@+id/editTextNumberPassword"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="462dp"
            android:background="#EDEDED"
            android:ems="3"
            android:hint="Your Card CVV"
            android:inputType="numberPassword"

            android:maxLength="3" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="462dp"
            android:background="#EDEDED"
            android:ems="10"
            android:hint="Your Exp Card Date"
            android:inputType="date"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="&#8249;" />


        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="Add New Card" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="20dp"
            android:text="..." />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>